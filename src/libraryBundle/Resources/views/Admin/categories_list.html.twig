{% extends 'libraryBundle::layout.html.twig' %}

{% block title %}Liste des categories{% endblock %}

{% block body %}

<div class="container page-content">
  <h1>Liste des categories</h1>
  <div class="row">
    <div class="col-md-12">
      {% if categories %}
      <table class="table table-hover">
        <thead align="center"> 
          <th>Nom</th>
          <th>Résumé</th>
          <th>Modifier</th>
        </thead>
        {% for category in categories %}
        <tr>
          <td>{{ category.name }}</td>
          <td>{{ category.summary|truncate(50, true, '...') }}</td>
          <td align="center"><a title="Modifier" href="{{ path('library_edit_category', {'id': category.id}) }}"><i class="fa fa-edit"></i></a></td>
        </tr>
        {% endfor %}
      </table>
      {% else %}
      <p><b>No books match...</b></p>
      {% endif %}

      <div class="form-group">
        <a class="btn btn-primary" href="{{ path('library_add_category') }}" ><i class="fa fa-plus-square"></i> Ajouter une categorie</a>
      </div>
    </div>
  </div>
</div>

{% endblock %}
